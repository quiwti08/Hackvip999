Tab2Btn.MouseButton1Click:Connect(function() switchPage(Page2) end)
Tab3Btn.MouseButton1Click:Connect(function() switchPage(Page3) end)
Tab5Btn.MouseButton1Click:Connect(function() switchPage(Page5) end)

