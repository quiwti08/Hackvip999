-- ========== RAPIDFIRE ==========
local utility = {}
getgenv().config = { enable = false, delay = 0.01 }
getgenv().is_firing = false

utility.get_gun = function()
    local char = LocalPlayer.Character
    if not char then return end
    for _, tool in next, char:GetChildren() do
        if tool:IsA("Tool") and tool:FindFirstChild("Ammo") then
            return tool
        end
    end
end

utility.rapid = function(tool)
    tool:Activate()
end

-- Nút RapidFire toggle trong GUI
rapidButton = CreateButton(ButtonFrame1, "RapidFire: OFF", function()
    config.enable = not config.enable
    rapidButton.Text = "RapidFire: " .. (config.enable and "ON" or "OFF")
    sendNotification("RapidFire", config.enable and "ON" or "OFF")
end)

local UIS = game:GetService("UserInputService")

-- PC: giữ chuột trái
UIS.InputBegan:Connect(function(i)
    if i.UserInputType == Enum.UserInputType.MouseButton1 or i.UserInputType == Enum.UserInputType.Touch then
        local gun = utility.get_gun()
        if config.enable and gun and not is_firing then
            is_firing = true
            while is_firing do
                utility.rapid(gun)
                task.wait(config.delay)
            end
        end
    end
end)

UIS.InputEnded:Connect(function(i)
    if i.UserInputType == Enum.UserInputType.MouseButton1 or i.UserInputType == Enum.UserInputType.Touch then
        is_firing = false
    end
end)

