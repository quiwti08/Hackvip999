-- ========== AUTO AIR ==========
Script.AutoAir = function(Target)
    if getgenv().Extort and getgenv().Extort['Features'] and getgenv().Extort['Features']['Auto Air'] 
        and Target and Target.Character then

        local TargetRootPart = Target.Character:FindFirstChild("HumanoidRootPart")
        if TargetRootPart then
            -- Nếu bạn đã có Script.CalculateVelocity thì giữ nguyên,
            -- còn chưa có thì thay bằng TargetRootPart.AssemblyLinearVelocity
            local TargetVel = Script.CalculateVelocity and Script.CalculateVelocity(Target) or TargetRootPart.AssemblyLinearVelocity
            if TargetVel.Y > 15 then
                local Character = LocalPlayer.Character
                if Character then
                    local Tool = Character:FindFirstChildOfClass("Tool")
                    if Tool then
                        Tool:Activate()
                    end
                end
            end
        end
    end
end

-- ========== GET GUN ==========
Script.GetGun = function(player)
    if not player.Character then return end
    local tool = player.Character:FindFirstChildOfClass("Tool")
    if not tool then return end
    local info = {}
    for _, obj in pairs(tool:GetDescendants()) do
        if obj.Name:lower():find("ammo") and not obj.Name:lower():find("max") 
            and (obj:IsA("IntValue") or obj:IsA("NumberValue")) then
            info.ammo = obj
            info.tool = tool
            return info
        end
    end
end

-- ========== ON TOOL ACTIVATE ==========
Script.OnToolActivated = function()
    if Locking and Target and Target.Character then
        local part = Target.Character:FindFirstChild(getgenv().Extort['Part'])
        if part then
            local vel = PlayerData and PlayerData[Target] and PlayerData[Target].Velocity or Vector3.zero
            local position = part.Position + (vel * (getgenv().Extort['Prediction']['Amount'] or 0))
            remote:FireServer(mouse_argument, position)
        end
    end
end

-- ========== SETUP CONNECTIONS ==========
Script.SetupConnections = function()
    LocalPlayer.Character.ChildAdded:Connect(function(child)
        if child:IsA("Tool") then
            child.Activated:Connect(Script.OnToolActivated)
        end
    end)
end

-- Gọi hàm setup để gắn auto bắn
Script.SetupConnections()

local function GetPing()
    local stats = game:GetService("Stats"):FindFirstChild("Network")
    local data = stats and stats:FindFirstChild("DataPing")
    return data and math.clamp(data:GetValue(), 10, 300) or 40
end

-- Thêm hàm tính prediction scalar dựa trên ping (standard cho Da Hood)
local function GetPredFromPing(p)
    if p < 20 then return 0.119
    elseif p < 30 then return 0.122
    elseif p < 40 then return 0.126
    elseif p < 50 then return 0.130
    elseif p < 60 then return 0.133
    elseif p < 70 then return 0.136
    elseif p < 80 then return 0.139
    elseif p < 90 then return 0.143
    elseif p < 100 then return 0.146
    elseif p < 150 then return 0.150
    elseif p < 200 then return 0.155
    else return 0.165 + (p - 200) / 1000  -- Tăng dần cho ping cao
    end
end

-- Sửa hàm CalculateVIPPrediction (bỏ distanceFactor để giống standard Da Hood, dùng scalar pred)
local function CalculateVIPPrediction(part, ping)
    if not part or not part:IsA("BasePart") then return nil end
    local velocity = part.Velocity
    local pred = GetPredFromPing(ping)  -- Tính scalar pred từ ping
    return part.Position + velocity * pred
end

task.spawn(function()
    while task.wait(0.03) do -- ~30ms
        if not Config.AimbotEnabled then
            Config.Prediction = nil
        else
            local ping = Config.AutoPredictionEnabled and GetPing() or tonumber(Config.CustomPing) or 0
            local target = GetClosestValidPlayer()
            if target and target.Character then
                local part = target.Character:FindFirstChild(getgenv().Aimbot.Hitpart)
                if part then
                    Config.Prediction = CalculateVIPPrediction(part, ping) -- should return Vector3
                else
                    Config.Prediction = nil
                end
            else
                Config.Prediction = nil
            end
        end
    end
end)

